/* styles in src/style directory are applied to the whole page */
html,
body
  width 100%
  height 100%
  overflow hidden
  margin 0
  padding 0
  color #222
  font-weight 100
  font-size 1em
  font-family "Segoe UI', 'HelveticaNeue-Light', sans-serif"
  line-height 1.375

.text-center
  text-align center

.view-container
  overflow hidden
  position relative
  display flex

.view
  position absolute
  overflow hidden
  display flex

.view-container,
.view
  width 100%
  height 100%